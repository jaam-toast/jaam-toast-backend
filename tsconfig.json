{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "src/types/**/**/*"]
  },
  "include": ["src/**/**/*", "index.d.ts"],
  "exclude": ["node_modules", "**/*.(spec|test).ts"]
}
