{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2021"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "ts-build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types/**/**/*", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/**/*", "index.d.ts"],
  "exclude": ["node_modules", "**/*.(spec|test).ts"]
}
