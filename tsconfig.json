{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "ts-build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "src/types/**/**/*"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
  },
  "include": ["src/**/**/*", "index.d.ts"],
  "exclude": ["node_modules", "**/*.(spec|test).ts"]
}
